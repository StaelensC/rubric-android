<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTheme.TextColorReverse" parent="AppTheme">
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="top_constraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@color/primaryColor</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonBarButtonStyle</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

</resources>
