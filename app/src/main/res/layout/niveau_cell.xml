<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/colorSecundaryLight"
    android:orientation="vertical"
    android:id="@+id/NiveauCellContainer"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:clipChildren="false">

        <TextView
            android:id="@+id/titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorTextOnSecundary"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorSecundaryDark" />

        <TextView
            android:id="@+id/omschrijving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:minLines="10"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorTextOnSecundary"
            tools:text="@tools:sample/lorem/random" />
        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:minLines="1"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            tools:text="@tools:sample/lorem/random" />
        <LinearLayout
            android:id="@+id/sliderContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:visibility="invisible"
            android:clipChildren="false">
            <TextView
                android:id="@+id/sliderMin"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                tools:text="@tools:sample/lorem" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:stepSize="1"
                app:floatingLabel="true"
                />

            <TextView
                android:id="@+id/sliderMax"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                tools:text="@tools:sample/lorem" />
        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>